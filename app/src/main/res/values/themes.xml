<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Adidas" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:searchHintIcon">@drawable/ic_search_2</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MainBottomNavigationView">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="itemIconSize">24dp</item>
        <item name="background">@color/white</item>
        <item name="itemIconTint">@color/menu_item_selector</item>
        <item name="android:textColor">@color/menu_item_selector</item>
    </style>

    <style name="DefaultImageButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="background">@color/white</item>
    </style>

    <style name="TitleTextViewFirst">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="background">@color/black</item>
    </style>

    <style name="SimpleTextViewFirst">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="background">@color/black</item>
    </style>


</resources>