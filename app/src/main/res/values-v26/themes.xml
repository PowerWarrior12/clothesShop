<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainBottomNavigationView">
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="itemIconSize">24dp</item>
        <item name="background">@color/white</item>
        <item name="itemIconTint">@color/menu_item_selector</item>
        <item name="android:textColor">@color/menu_item_selector</item>
    </style>

    <style name="DefaultImageButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="background">@color/white</item>
    </style>

    <style name="TitleTextViewFirst">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>

    <style name="TitleTextViewFirst.White" parent="TitleTextViewFirst">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleTextViewFirst.Black" parent="TitleTextViewFirst">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleTextViewSecond">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>

    <style name="TitleTextViewSecond.Black" parent="TitleTextViewSecond">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleTextViewSecond.White" parent="TitleTextViewSecond">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SimpleTextViewFirst">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:paddingHorizontal">8dp</item>
    </style>

    <style name="SimpleTextViewFirst.Black" parent="SimpleTextViewFirst">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SimpleTextViewFirst.White" parent="SimpleTextViewFirst">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SimpleTextViewFirst.Red" parent="SimpleTextViewFirst">
        <item name="android:textColor">#F10000</item>
    </style>

    <style name="SimpleTextViewSecond">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="StatusText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="BorderButton">
        <item name="android:textSize">13sp</item>
        <item name="height">30dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">36dp</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>

    <style name="BorderButton.White" parent="BorderButton">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BorderButton.Black" parent="BorderButton">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>